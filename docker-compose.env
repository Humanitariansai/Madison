# ============================================
# Docker Compose Environment Variables
# ============================================
# This file contains environment variables for Docker Compose services
# You can also set these in docker-compose.yml directly

# ============================================
# PostgreSQL Configuration
# ============================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=survey_analysis
POSTGRES_PORT=5432

# ============================================
# pgAdmin Configuration
# ============================================
PGADMIN_DEFAULT_EMAIL=admin@admin.com
PGADMIN_DEFAULT_PASSWORD=admin
PGADMIN_PORT=5050

# ============================================
# Redis Configuration
# ============================================
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_MAXMEMORY=256mb

# ============================================
# Backend API Configuration (if running in Docker)
# ============================================
# These are used when backend runs in Docker container
BACKEND_PORT=8000
BACKEND_HOST=0.0.0.0

# Database URL for backend (when running in Docker)
# Use service name 'postgres' instead of 'localhost'
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/survey_analysis

# Redis URL for backend (when running in Docker)
# Use service name 'redis' instead of 'localhost'
REDIS_URL=redis://redis:6379/0

# JWT Configuration
SECRET_KEY=dev-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# OpenAI API Key (optional)
OPENAI_API_KEY=your_openai_api_key_here

